<h1>New Video</h1>

<%= form_for :video, url: videos_path do |f| %>
<p>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
</p>

<p>
	<%= f.label :url %><br>
	<%= f.text_field :url %>
</p>

<p>
	<%= f.label :text %><br>
	<%= f.text_area :text %>
</p>

<p>
	<%= f.submit %>
</p>
<% end %>

<%= link_to 'Back', videos_path %>