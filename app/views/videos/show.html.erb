
<p>
	<h1><%= @video.title %></h1>
</p>

<p>
	<%= raw youtube_embed(@video.url) %>
</p>

<p>
	<h3><%= @video.text %></h3>
</p>
<%= link_to edit_video_path(@video), class: "btn btn-lg btn-info" do %>
<i class="glyphicon glyphicon-pencil"></i>
<% end %>

<%= link_to videos_path, class: "btn btn-lg btn-info" do %>
<i class="glyphicon glyphicon-arrow-left"></i>
<% end %>
<br>
<hr>
<br>

<h2>Comments</h2>
<%= render @video.comments %>

<!-- remove all the <br>'s and style with css later -->
<br>



<% if user_signed_in? %>
<hr>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<% else %>

<div class="jumbotron">
<%= link_to "Login to post a comment", new_user_session_path, class: "btn btn-primary btn-lg"  %>
</div>

<% end %>





