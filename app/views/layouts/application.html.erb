<!DOCTYPE html>
<html>
<head>
  <title>YoutubeSharer</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

 <div id="main-container" class="container">
  <div class="row">
    <div class="col-xs-2">
      <%= link_to(image_tag('youtube25.png', class: "logo"), root_path)  %> 
      <%= render 'new_video' if(params[:action] != "new") %>
    </div>
    <div class="col-xs-8">
      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>
