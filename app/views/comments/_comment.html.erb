<div class="row">
<div class="col-xs-10">
<div class="jumbotron">
<p>
  <h2>Posted by <%= comment.commenter %></h2>
</p>
 
<p class="comment-indent">
  <%= comment.body %>
</p>
</div>
</div>
</div>

<p>
  <%= link_to [comment.video, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
               <i class="glyphicon glyphicon-trash"></i>
               <% end %>
</p>