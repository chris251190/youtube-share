<div class="row">
	<div class="col-xs-10">
		<div class="jumbotron">
			<p>
				<h2>Posted by <%= comment.commenter %></h2>
			</p>

			<hr>
			
			<p class="comment-indent">
				<%= comment.body %>
				
			</p>

			<% if user_signed_in? %>
			<%= link_to [comment.video, comment],
			method: :delete,
			data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
			<i class="glyphicon glyphicon-trash"></i>
			<% end %>
			<% end %>

		</div>
	</div>
</div>


